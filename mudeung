<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>무등산 국립공원 경계선</title>
    <script type="text/javascript" src="https://oapi.map.naver.com/openapi/v3/maps.js?ncpClientId=g2u4orbiqf"></script>
    <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }
        #map {
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <div id="map"></div>
    <script>
        var map = new naver.maps.Map('map', {
            center: new naver.maps.LatLng(35.1325, 126.9658),
            zoom: 12
        });

        // 가상의 무등산 국립공원 경계선 좌표
        // 실제 경계선 좌표가 아니므로 주의 바랍니다.
        var polygonPath = [
            new naver.maps.LatLng(35.15, 126.95),
            new naver.maps.LatLng(35.16, 127.00),
            new naver.maps.LatLng(35.13, 127.02),
            new naver.maps.LatLng(35.10, 127.00),
            new naver.maps.LatLng(35.11, 126.97),
            new naver.maps.LatLng(35.12, 126.95),
        ];

        // 폴리곤(Polygon) 객체 생성
        var polygon = new naver.maps.Polygon({
            map: map,
            paths: [polygonPath],
            fillColor: '#007BFF',   // 내부 색상 (파란색)
            fillOpacity: 0.1,       // 내부 투명도
            strokeColor: '#007BFF', // 선 색상 (파란색)
            strokeOpacity: 0.6,     // 선 투명도
            strokeWeight: 3         // 선 굵기
        });

    </script>
</body>
</html>
