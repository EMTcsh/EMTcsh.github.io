<script>
let currentLat, currentLng;

/* ë‚´ ìœ„ì¹˜ í™•ì¸ */
document.getElementById('getLocation').onclick = () => {
    if (!navigator.geolocation) {
        alert("GPSë¥¼ ì§€ì›í•˜ì§€ ì•ŠëŠ” ë¸Œë¼ìš°ì €ì…ë‹ˆë‹¤.");
        return;
