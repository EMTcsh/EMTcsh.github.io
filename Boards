    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 0;
        }
        .container {
            max-width: 600px;
            margin: auto;
        }
        h1 {
            text-align: center;
        }
        .board {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 20px;
        }
        .board th, .board td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        .board th {
            background-color: #f2f2f2;
            text-align: center;
        }
        .post-form {
            margin-bottom: 20px;
        }
        .post-form input[type="text"] {
            width: calc(100% - 110px);
            padding: 10px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .post-form button {
            padding: 10px 20px;
            border: none;
            background-color: #28a745;
